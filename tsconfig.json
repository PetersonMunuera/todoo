{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    // Ambiente alvo: última versão do ECMAScript
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],

    // Sistema de módulos: import/export moderno
    "module": "ESNext",
    "moduleResolution": "Node",

    // JSX para React 17+ (não precisa de import React)
    "jsx": "react-jsx",

    // Segurança de tipos
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    // Compatibilidade com ferramentas de bundlers (Vite/ESBuild)
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    // Vite não precisa de saída TS → JS, só checagem
    "noEmit": true,

    // src path alias
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": ["src", "vite.config.ts"],
}
